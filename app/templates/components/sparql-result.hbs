<div class="panel panel-success">
    <div class="panel-heading">
      {{#if csvUri}}
          <div style="float: right; margin-right: 1em;">
              <a class="btn btn-default" type="button" href="{{csvUri}}" download>Download as CSV</a>
          </div>
      {{/if}}
        <h3 class="panel-title">Result</h3>
    </div>
  {{#if result.head.vars}}
      <table class="table table-hover">
          <thead>
          <tr>
            {{#each result.head.vars as |var|}}
                <th>{{var}}</th>
            {{/each}}
          </tr>
          </thead>
          <tbody>
          {{#each result.results.bindings as |binding|}}
              <tr>
                {{#each binding as |term|}}
                    <td>
                      {{#if term}}
                        {{component (concat 'sparql-result-' term.type) term=term}}
                      {{/if}}
                    </td>
                {{/each}}
              </tr>
          {{/each}}
          </tbody>
      </table>
  {{else}}
      <div class="panel-body">
        {{#if result.boolean}}true{{else}}false{{/if}}
      </div>
  {{/if}}
</div>
