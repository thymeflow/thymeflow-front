<div class="system-status">
  {{#cp-panel as |panel|}}
    {{#panel.toggle}}
      <p>Show system status</p>
    {{/panel.toggle}}

    {{#panel.body}}
      <table>
        {{#each tasks as |task|}}
          <tr>
            <td><i class="fa fa-plug">{{task.type}}</i></td>
            <td>{{task.name}}</td>
            <td>{{task.startDate}}</td>
            <td><progress value="{{task.progress}}" max="100"></progress></td>
            <td>{{task.progress}}%</td>
            <td>{{task.status}}</td>
          </tr>
        {{/each}}
      </table>
    {{/panel.body}}
  {{/cp-panel}}
</div>