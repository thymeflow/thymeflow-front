<div class="system-status">
  {{#cp-panel as |panel|}}
    {{#panel.toggle}}
      <div class="panel-header" title="System status">
        <i class="fa fa-tasks tasks-icon"></i>
        <i class="fa fa-cog fa-spin fa-fw activity-icon"></i>
      </div>
    {{/panel.toggle}}

    {{#panel.body}}
      {{#if tasks}}
        <table class="tasks-table">
            {{#each tasks as |task|}}
              {{system-task task=task}}
            {{/each}}
        </table>
      {{else}}
        <div class="no-tasks-message">There are currently no tasks running.</div>
      {{/if}}
    {{/panel.body}}
  {{/cp-panel}}
</div>