<div class="container">
  <h1>Welcome to Thymeflow</h1>
  <hr>
  <div class="card external-connection-card">
    <div class="card-header">Connect with external services</div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <a class="external-connect-link" href="{{apiEndpoint}}/oauth/google/auth">
          <i class="fa fa-google"></i>
          Google
        </a>
      </li>
      <li class="list-group-item">
        <a class="external-connect-link" href="{{apiEndpoint}}/oauth/microsoft/auth">
          <i class="fa fa-windows"></i>
          Microsoft
        </a>
      </li>
      <li class="list-group-item">
        <a class="external-connect-link" href="{{apiEndpoint}}/oauth/facebook/auth">
          <i class="fa fa-facebook"></i>
          Facebook
        </a>
      </li>
    </ul>
  </div>

  <form class="card">
    <div class="card-header">File upload</div>
    <div class="card-block">
      <div class="form-group">
        {{file-upload uploadUrl=(concat apiEndpoint "/upload") uploadParam='file'}}
      </div>
    </div>
  </form>

  <form class="card" action="{{apiEndpoint}}/imap" method="POST" enctype="multipart/form-data">
    <div class="card-header">IMAP server</div>
    <div class="card-block">
      <div class="form-group">
        <label for="host">Host</label>
        <input type="text" id="host" name="host" required class="form-control"/>
      </div>
      <div class="form-group">
        <label for="user">User (usually the email address)</label>
        <input type="text" id="user" name="user" required class="form-control"/>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required class="form-control"/>
      </div>
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input class="custom-control-input" type="checkbox" id="ssl" name="ssl" value="true" checked/>
          <span class="custom-control-indicator"></span>
          <span class="custom-control-description">Use SSL</span>
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Retrieve</button>
    </div>
  </form>
</div>