<div class="app-body-header">
  <h1><i class="fa fa-users"></i> Contacts > {{model.name}}</h1>
</div>
<div class="card card-block">
  <h1 class="card-title">{{model.name}}</h1>
  <p class="card-text">
    {{model.name}}
    {{#each model.fields as |field|}}
      <dt class="col-sm-3">{{field.name}}</dt>
      <dd class="col-sm-9">{{field.value}}</dd>
    {{/each}}
  </p>
</div>